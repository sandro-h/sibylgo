{
  "name": "sibyl",
  "displayName": "Sibyl Todo",
  "description": "Sibyl vscode extension",
  "publisher": "sandro-h",
  "repository": "sibylgo",
  "version": "1.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "sibylgo.clean",
        "title": "Clean done todos"
      },
      {
        "command": "sibylgo.trash",
        "title": "Trash done todos"
      },
      {
        "command": "sibylgo.showPreview",
        "title": "Show sibylgo preview",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sibylgo.clean",
          "when": "resourceFilename =~ /todo.txt$/",
          "group": "sibylgo@1"
        },
        {
          "command": "sibylgo.trash",
          "when": "resourceFilename =~ /todo.txt$/",
          "group": "sibylgo@1"
        }
      ],
      "editor/title": [
        {
          "command": "sibylgo.showPreview",
          "when": "resourceFilename =~ /todo.txt$/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Sibyl",
      "properties": {
        "sibyl.todoFileName": {
          "type": "string",
          "default": "todo.txt",
          "description": "Filename recognized as a todo file by Sibyl."
        },
        "sibyl.restUrl": {
          "type": "string",
          "default": "http://localhost:8082",
          "description": "REST url of the Sibyl backend"
        }
      }
    }
  },
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "package": "vsce package -o sibyl.vsix",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^10.14.17",
    "@types/node-fetch": "^2.5.7",
    "@types/vscode": "^1.47.0",
    "typescript": "^3.5.1",
    "vsce": "^1.71.0"
  }
}
